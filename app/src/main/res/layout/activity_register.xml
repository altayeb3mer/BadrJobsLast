<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ResetPassword1"
    android:id="@+id/container">

    <include layout="@layout/public_toolbar"
        android:id="@+id/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/margin_small_size"
        android:background="@drawable/shape_container_lay_bg">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/margin_large_size">
                <TextView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_large_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="@string/welcome2"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_marginTop="@dimen/margin_large_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="@string/register_txt2"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/txt_large_size"
                    android:text="@string/register"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_marginTop="@dimen/margin_large_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="@string/name"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/grayCardEdt"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <EditText
                        android:inputType="text"
                        android:maxLines="1"
                        android:lines="1"
                        android:id="@+id/name"
                        android:visibility="visible"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="@dimen/margin_large_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="@string/nicName"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/grayCardEdt"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <EditText
                        android:inputType="text"
                        android:maxLines="1"
                        android:lines="1"
                        android:id="@+id/nicename"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <androidx.constraintlayout.widget.Guideline
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5"
                        android:id="@+id/g1"/>
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/layNotAvailable"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/g1">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:layout_centerVertical="true"
                            android:id="@+id/ic1"
                            android:src="@drawable/ic_clear"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_toEndOf="@+id/ic1"
                            android:layout_toRightOf="@+id/ic1"
                            android:text="@string/used"
                            android:textSize="@dimen/txt_normal_size"
                            android:textColor="@color/red"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/layAvailable"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/g1"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:layout_centerVertical="true"
                            android:id="@+id/ic2"
                            android:src="@drawable/ic_check"/>
                        <TextView
                            android:textColor="@color/colorGreen1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_toEndOf="@+id/ic2"
                            android:layout_toRightOf="@+id/ic2"
                            android:text="@string/avilable"
                            android:textSize="@dimen/txt_normal_size"/>
                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="@string/_8"
                    android:textColor="@color/red"/>



                <TextView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="@string/new_pass"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/grayCardEdt"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:passwordToggleEnabled="true">
                        <EditText
                            android:maxLines="1"
                            android:lines="1"
                            android:id="@+id/password1"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPassword"
                            android:background="@android:color/transparent"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_large_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="@string/confirm_new_pass"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/grayCardEdt"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:passwordToggleEnabled="true">
                        <EditText
                            android:maxLines="1"
                            android:lines="1"
                            android:id="@+id/password2"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPassword"
                            android:background="@android:color/transparent"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_large_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="@string/email"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/grayCardEdt"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <EditText
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:lines="1"
                        android:id="@+id/email"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_large_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="@string/confirm_email"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/grayCardEdt"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <EditText
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:lines="1"
                        android:id="@+id/confirm_email"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_large_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="@string/phone"
                    android:textStyle="bold"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layoutDirection="rtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.Guideline
                        android:layout_margin="@dimen/margin_small_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.6"
                        android:id="@+id/g2"/>
                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_marginRight="@dimen/margin_small_size"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/g2"
                        android:layout_marginTop="@dimen/margin_small_size"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        app:cardBackgroundColor="@color/grayCardEdt"
                        app:cardCornerRadius="@dimen/margin_normal_size">
                        <EditText
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:inputType="phone"/>
                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:layout_margin="@dimen/margin_small_size"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/g2">
                        <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                            android:gravity="center"
                            android:id="@+id/ccp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:ccp_defaultCode="249"/>
                    </RelativeLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_large_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="@string/nationality"
                    android:textStyle="bold"/>
                <RelativeLayout
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:background="@drawable/shape_btn_bg"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    >
                    <ImageView
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        android:layout_centerVertical="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_arrow_drop_down"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_alignParentRight="true" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:background="@android:color/transparent"
                        android:minWidth="120dp"/>
                </RelativeLayout>
                <TextView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_large_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="@string/job"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/grayCardEdt"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <EditText
                        android:inputType="text"
                        android:maxLines="1"
                        android:lines="1"
                        android:hint="@string/option"
                        android:id="@+id/job"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkbox"
                    android:layout_margin="@dimen/margin_large_size"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="@string/term_and_policy"
                    android:textSize="@dimen/txt_normal_size"
                    android:textStyle="bold"/>





                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn"
                    android:layout_marginTop="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/_register"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_large_size"
                    android:background="@drawable/shape_btn_bg"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>


            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/progressLay"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avi"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="visible"
                app:indicatorColor="@color/colorPrimary"
                />
        </LinearLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>