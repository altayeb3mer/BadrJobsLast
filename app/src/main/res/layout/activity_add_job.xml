                        android:gravity="start"
                        android:background="@android:color/transparent"
                        android:id="@+id/edtDescription"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/txt_normal_size"
                        android:textStyle="bold"
                        android:hint="علي احمد خالد مهندس كمبيوتر"/>
                    <TextView
                        android:id="@+id/bioCount"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:text="120"
                        android:textSize="@dimen/txt_small_size"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_marginTop="@dimen/margin_normal_size"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:layout_margin="@dimen/margin_normal_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_normal_size"
                android:text="اضافة رقم للاتصال المباشر"/>
            <RadioGroup
                android:id="@+id/radioGroupContactPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin_large_size"
                android:layout_marginRight="@dimen/margin_large_size">
                <RadioButton
                    android:id="@+id/radioBtnContactPhone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نفس رقم الهاتف المسجل في الحساب"
                    android:textSize="@dimen/txt_normal_size"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                <RadioButton
                    android:id="@+id/radioBtnContactPhone2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ادخال رقم هاتف جديد خاص بالاعلان فقط"
                    android:textSize="@dimen/txt_normal_size"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
            </RadioGroup>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:id="@+id/layPhone"
                android:layout_marginLeft="@dimen/margin_large_size"
                android:layout_marginRight="@dimen/margin_large_size"
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.Guideline
                    android:layout_margin="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.7"
                    android:id="@+id/g2"/>
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginRight="@dimen/margin_small_size"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/g2"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/grayCardEdt"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <EditText
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:id="@+id/edtPhone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:inputType="phone"/>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_margin="@dimen/margin_small_size"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/g2">
                    <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                        android:gravity="center"
                        android:id="@+id/ccp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:ccp_defaultCode="966"
                        app:ccp_defaultNameCode="SA"
                        app:ccp_hideNameCode="true"/>
                </RelativeLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_normal_size"
                android:gravity="center_vertical"
                android:background="@drawable/shape_edt_search_bg"
                android:paddingRight="@dimen/margin_small_size"
                android:paddingLeft="@dimen/margin_small_size"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                />
            <View
                android:layout_marginTop="@dimen/margin_large_size"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkbox"
                android:layout_margin="@dimen/margin_large_size"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="أنا المسئول عن صحة ودقة جميع\n بياناتي التي سوف انشرها في إعلاني"
                android:textSize="@dimen/txt_normal_size"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:text="أنشر"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_circle"
                />




            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/progressLay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="visible"
            app:indicatorColor="@color/colorPrimary"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>