<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/public_toolbar"
        android:id="@+id/toolbar"/>


    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_margin="@dimen/txt_normal_size"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="باقات الدفع"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_margin="@dimen/txt_normal_size"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="اختر باقتك المفضلة"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_normal_size"
                android:text="مدة الإعلان يوم من بداية عرضة وكل إعلان مستقل عن الأخر"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:gravity="center"/>


            <RadioGroup
                android:padding="@dimen/margin_small_size"
                android:background="@drawable/shape_pay_pack_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal_size">

                <RadioButton
                    android:background="@drawable/shape_notification_det_bg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="@dimen/txt_normal_size"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/margin_normal_size"
                    android:text="إعلان واحد USA 10"/>
                <RadioButton
                    android:background="@drawable/shape_notification_det_bg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="@dimen/txt_normal_size"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/margin_normal_size"
                    android:text="خمس اعلانات USA 40"/>
                <RadioButton
                    android:background="@drawable/shape_notification_det_bg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="@dimen/txt_normal_size"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/margin_normal_size"
                    android:text="عشرة اعلانات USA 70"/>


            </RadioGroup>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="@dimen/margin_normal_size"
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="ادفع"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_large_size"
                android:background="@drawable/shape_btn_bg"/>



            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>