<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bader.cutShort.badrjobs.Activity.MainActivity">

    <RelativeLayout
        android:id="@+id/layToolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_toolbar_bg">
        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_normal_size"
            android:layout_marginLeft="@dimen/margin_normal_size"
            android:src="@drawable/ic_menu"/>

        <ImageView
            android:id="@+id/icNotification"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_normal_size"
            android:layout_marginLeft="@dimen/margin_normal_size"
            android:src="@drawable/ic_notifications"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <bader.cutShort.badrjobs.Utils.CustomViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_navigation"
        app:layout_constraintTop_toBottomOf="@+id/layToolbar"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="16dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:padding="0dp"
        android:background="@color/layoutBg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btn_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="auto"
        app:menu="@menu/btn_nav"
        app:itemIconTint="@drawable/bottom_navigation_selector"
        app:itemBackground="@drawable/btn_nav_item_back"
        app:itemTextColor="@android:color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>