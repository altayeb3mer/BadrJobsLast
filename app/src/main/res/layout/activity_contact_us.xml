<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MenuActivity"
    android:background="@drawable/shape_btn_nav_bg">

    <include layout="@layout/public_toolbar"
        android:id="@+id/toolbar"/>
    <RelativeLayout
        android:layout_margin="@dimen/margin_large_size"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:background="@drawable/shape_notification_det_bg"
            android:layout_margin="@dimen/margin_large_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/sendEmail"
                android:paddingLeft="@dimen/margin_large_size"
                android:paddingRight="@dimen/margin_large_size"
                android:background="@drawable/shape_btn_contact_us_bg"
                android:layout_marginTop="@dimen/margin_normal_size"
                android:layout_width="200dp"
                android:layout_height="45dp">
                <ImageView
                    android:src="@drawable/ic_email"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/ic1"/>
                <TextView
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/ic1"
                    android:textSize="@dimen/txt_normal_size"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="@string/sendEmail" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/whatsapp"
                android:paddingLeft="@dimen/margin_large_size"
                android:paddingRight="@dimen/margin_large_size"
                android:background="@drawable/shape_btn_contact_us_bg"
                android:layout_marginTop="@dimen/margin_normal_size"
                android:layout_width="200dp"
                android:layout_height="45dp">
                <ImageView
                    android:src="@drawable/ic_whatsapp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/ic2"/>
                <TextView
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/ic2"
                    android:textSize="@dimen/txt_normal_size"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="@string/sendWhatsapp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/call"
                android:paddingLeft="@dimen/margin_large_size"
                android:paddingRight="@dimen/margin_large_size"
                android:background="@drawable/shape_btn_contact_us_bg"
                android:layout_marginTop="@dimen/margin_normal_size"
                android:layout_width="200dp"
                android:layout_height="45dp">
                <ImageView
                    android:src="@drawable/ic_call"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/ic3"/>
                <TextView
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/ic3"
                    android:textSize="@dimen/txt_normal_size"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="@string/callus" />
            </RelativeLayout>





        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/progressLay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="visible"
            app:indicatorColor="@color/colorPrimary"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>