<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bader.cutShort.badrjobs.Activity.MenuActivity">

    <include layout="@layout/public_toolbar"
        android:id="@+id/toolbar"/>
    <RelativeLayout
        android:layout_margin="@dimen/margin_large_size"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">
<LinearLayout
    android:background="@drawable/shape_about_container_bg"
    android:layout_margin="@dimen/margin_large_size"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:paddingRight="@dimen/margin_large_size"
        android:paddingLeft="@dimen/margin_large_size"
        android:id="@+id/layContactUs"
        android:background="@drawable/shape_btn_about_bg"
        android:layout_marginTop="@dimen/margin_normal_size"
        android:layout_width="200dp"
        android:layout_height="45dp">
        <ImageView
            android:src="@drawable/ic_email_white"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"

            android:id="@+id/ic1"/>
        <TextView
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ic1"
            android:textSize="@dimen/txt_normal_size"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="@string/contact_us"
            android:layout_toRightOf="@+id/ic1" />
    </RelativeLayout>
    <RelativeLayout
        android:paddingRight="@dimen/margin_large_size"
        android:paddingLeft="@dimen/margin_large_size"
        android:id="@+id/layAbout"
        android:background="@drawable/shape_btn_about_bg"
        android:layout_marginTop="@dimen/margin_normal_size"
        android:layout_width="200dp"
        android:layout_height="45dp">
        <ImageView
            android:src="@drawable/ic_about"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/ic2"/>
        <TextView
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ic2"
            android:textSize="@dimen/txt_normal_size"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="@string/about"
            android:layout_toRightOf="@+id/ic2" />
    </RelativeLayout>
    <RelativeLayout
        android:paddingRight="@dimen/margin_large_size"
        android:paddingLeft="@dimen/margin_large_size"
        android:id="@+id/layTerm"
        android:background="@drawable/shape_btn_about_bg"
        android:layout_marginTop="@dimen/margin_normal_size"
        android:layout_width="200dp"
        android:layout_height="45dp">
        <ImageView
            android:src="@drawable/ic_term_policy"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/ic3"/>
        <TextView
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ic3"
            android:textSize="@dimen/txt_normal_size"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="@string/term"
            android:layout_toRightOf="@+id/ic3" />
    </RelativeLayout>
    <RelativeLayout
        android:paddingRight="@dimen/margin_large_size"
        android:paddingLeft="@dimen/margin_large_size"
        android:id="@+id/layShare"
        android:background="@drawable/shape_btn_about_bg"
        android:layout_marginTop="@dimen/margin_normal_size"
        android:layout_width="200dp"
        android:layout_height="45dp">
        <ImageView
            android:src="@drawable/ic_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/ic4"/>
        <TextView
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ic4"
            android:textSize="@dimen/txt_normal_size"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="@string/share"
            android:layout_toRightOf="@+id/ic4" />
    </RelativeLayout>
    <RelativeLayout
        android:paddingRight="@dimen/margin_large_size"
        android:paddingLeft="@dimen/margin_large_size"
        android:id="@+id/copyFromContract"
        android:background="@drawable/shape_btn_about_bg"
        android:layout_marginTop="@dimen/margin_normal_size"
        android:layout_width="200dp"
        android:layout_height="45dp">
        <ImageView
            android:src="@drawable/ic_copy"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/ic5"/>
        <TextView
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ic5"
            android:textSize="@dimen/txt_normal_size"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="@string/copy"
            android:layout_toRightOf="@+id/ic5" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/shape_btn_about_bg"
        android:layout_marginTop="@dimen/margin_normal_size"
        android:layout_width="200dp"
        android:layout_height="45dp">
        <ImageView
            android:src="@drawable/ic_language"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_large_size"
            android:layout_marginRight="@dimen/margin_large_size"
            android:id="@+id/ic6"/>
        <ImageView
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_arrow_drop_down"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_large_size"
            android:layout_marginRight="@dimen/margin_large_size"
            android:id="@+id/ic7" />
        <Spinner
            android:gravity="center"
            android:id="@+id/spinner"
            android:background="@android:color/transparent"
            android:layout_toStartOf="@+id/ic7"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/ic6"
            android:textSize="@dimen/txt_normal_size"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </RelativeLayout>




</LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>