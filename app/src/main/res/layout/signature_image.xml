<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DeptsActivity">

    <include layout="@layout/public_toolbar"
        android:id="@+id/toolbar"/>
    <TableLayout
        android:layoutDirection="rtl"
        android:id="@+id/la2"
        android:layout_margin="@dimen/margin_normal_size"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <TableRow
            android:gravity="center">
            <TextView
                android:textSize="@dimen/txt_small_size"
                android:layout_width="wrap_content"
                android:text="توقيع الطرف الاول"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <View
                android:id="@+id/view1"
                android:layout_marginRight="@dimen/margin_small_size"
                android:layout_marginLeft="@dimen/margin_small_size"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="@dimen/margin_small_size"
            android:gravity="center">
            <TextView
                android:textSize="@dimen/txt_small_size"
                android:layout_width="wrap_content"
                android:text="توقيع الطرف الثاني"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <View
                android:id="@+id/view2"
                android:layout_marginRight="@dimen/margin_small_size"
                android:layout_marginLeft="@dimen/margin_small_size"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:id="@+id/layBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn2"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/margin_normal_size"
            android:layout_marginRight="@dimen/margin_normal_size"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_btn_chat_bg"
            android:text="قبول"
            android:textSize="@dimen/txt_normal_size"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSign"
            android:layout_marginLeft="@dimen/margin_normal_size"
            android:layout_marginRight="@dimen/margin_normal_size"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_btn_chat_bg"
            android:text="التوقيع"
            android:textSize="@dimen/txt_normal_size"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="@dimen/margin_normal_size"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/la2"
        app:layout_constraintBottom_toTopOf="@+id/layBtn"
        android:background="@drawable/shape_ads_item_bg">
        <com.jsibbold.zoomage.ZoomageView
            android:layout_margin="@dimen/margin_small_size"
            android:id="@+id/signatureImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:zoomage_restrictBounds="false"
            app:zoomage_animateOnReset="true"
            app:zoomage_autoResetMode="UNDER"
            app:zoomage_autoCenter="true"
            app:zoomage_zoomable="true"
            app:zoomage_translatable="true"
            app:zoomage_minScale="0.6"
            app:zoomage_maxScale="8"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/progressLay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="visible"
            app:indicatorColor="@color/colorPrimary"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>