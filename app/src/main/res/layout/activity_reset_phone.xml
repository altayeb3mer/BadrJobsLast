<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/public_toolbar"
        android:id="@+id/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/margin_small_size"
        android:background="@drawable/shape_container_lay_bg">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/margin_large_size">
                <TextView
                    android:layout_marginTop="@dimen/margin_normal_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/txt_extra_large_size"
                    android:text="@string/edt_phone_"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="@string/_new_phone"
                    android:textStyle="bold"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layoutDirection="rtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.Guideline
                        android:layout_margin="@dimen/margin_small_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.6"
                        android:id="@+id/g2"/>
                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_marginRight="@dimen/margin_small_size"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/g2"
                        android:layout_marginTop="@dimen/margin_small_size"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        app:cardBackgroundColor="@color/grayCardEdt"
                        app:cardCornerRadius="@dimen/margin_normal_size">
                        <EditText
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:inputType="phone"/>
                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:layout_margin="@dimen/margin_small_size"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/g2">
                        <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                            android:gravity="center"
                            android:id="@+id/ccp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:ccp_defaultCode="249"/>
                    </RelativeLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:layout_marginLeft="@dimen/margin_large_size"
                    android:layout_marginRight="@dimen/margin_large_size"
                    android:layout_marginTop="@dimen/margin_large_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="@string/u_wel_recieve_msg"
                    android:textColor="@android:color/black"/>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn"
                    android:layout_marginTop="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/ok"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_large_size"
                    android:background="@drawable/shape_btn_bg"/>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/progressLay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="visible"
            app:indicatorColor="@color/colorPrimary"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>