<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/margin_small_size"
    android:layout_marginRight="@dimen/margin_small_size"
    android:layout_marginTop="1dp"
    android:background="@drawable/shape_ads_item_bg"
    android:layoutDirection="rtl"
    android:id="@+id/container">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        android:id="@+id/g1"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/g1"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_color="#FFF643"
            app:civ_border_width="2.5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/flag"
            android:id="@+id/img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_normal_size"
            android:layout_marginRight="@dimen/margin_normal_size"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img"
            android:layout_toRightOf="@+id/img"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="علي"
                android:textSize="@dimen/txt_normal_size"
                android:ellipsize="end"
                android:maxEms="10"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/fixName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ahmed@"
                android:textSize="@dimen/txt_small_size"
                android:textColor="@android:color/black"
                android:ellipsize="end"
                android:maxEms="10"
                android:maxLines="1"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/g1"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <ImageView
            android:scaleType="center"
            android:id="@+id/ic_favorite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_favorite_red"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_small_size"
            android:layout_marginLeft="@dimen/margin_small_size"/>

        <TextView
            android:gravity="center"
            android:id="@+id/title"
            android:layout_toStartOf="@+id/ic_favorite"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="فني اجهزة كهربائية"
            android:textSize="@dimen/txt_normal_size"
            android:textColor="@color/colorPrimary"
            android:layout_toLeftOf="@+id/ic_favorite"
            android:ellipsize="end"
            android:maxEms="22"
            android:maxLines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small_size"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/edtDate"
            android:text="1 ساعة"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/progressLay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="visible"
            app:indicatorColor="@color/colorPrimary"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>