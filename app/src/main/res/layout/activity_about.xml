<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DeptsActivity"
    android:background="@drawable/shape_btn_nav_bg"
    >

    <include layout="@layout/public_toolbar"
        android:id="@+id/toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_margin="@dimen/margin_large_size"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_margin="@dimen/margin_large_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icNotification"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_logo"
                android:layout_margin="@dimen/txt_small_size"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_marginRight="@dimen/margin_normal_size"
                android:layout_marginLeft="@dimen/margin_normal_size"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_large_size"
                android:textColor="@android:color/white"
                android:text="للتوضیح : "/>
            <TextView
                android:layout_marginRight="@dimen/margin_normal_size"
                android:layout_marginLeft="@dimen/margin_normal_size"
                android:layout_marginTop="@dimen/margin_normal_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_normal_size"
                android:textColor="@android:color/white"
                android:text="نرجو عدم تسلیم رمز الكود الخاص بالعقد الا  للشخص المتفق معھ في العمل وذلك لحفظ بیناتك"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/margin_normal_size"
                android:layout_marginLeft="@dimen/margin_normal_size"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_normal_size"
                android:textColor="@android:color/white"
                android:text="للتوضیح : "/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/progressLay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="visible"
            app:indicatorColor="@color/colorPrimary"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>