<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ConfirmPhone">

    <LinearLayout
        android:padding="@dimen/margin_large_size"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_large_size"
            android:src="@drawable/flag"
            />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_large_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_normal_size"
            android:text="يجب ادخال كود التاكيد الذي تم ارسالة الى رقم هاتفك"
            android:textColor="@android:color/black"
            android:gravity="center"/>
        <EditText
            android:inputType="number"
            android:id="@+id/edtCode"
            android:layout_margin="@dimen/margin_large_size"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:minWidth="200dp"/>




    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="تأكيد"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_large_size"
        android:background="@drawable/shape_btn_bg"
        android:layout_marginBottom="100dp"/>

    <LinearLayout
        android:id="@+id/progressLay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="visible"
            app:indicatorColor="@color/colorPrimary"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>