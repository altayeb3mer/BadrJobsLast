<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Login">
    <include layout="@layout/public_toolbar"
        android:id="@+id/toolbar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/shape_container_lay_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_normal_size"
        android:layout_marginLeft="@dimen/margin_normal_size"
        android:layout_marginRight="@dimen/margin_normal_size">
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.9"
            android:orientation="horizontal"
            android:id="@+id/g1"/>

        <RelativeLayout
            android:layout_margin="@dimen/margin_normal_size"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/g1"
            android:padding="@dimen/margin_normal_size">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_above="@+id/btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/flag"
                        android:id="@+id/img"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_normal_size"
                        android:layout_marginRight="@dimen/margin_normal_size"/>
                    <TextView
                        android:id="@+id/name"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="علي احمد خالد"
                        android:textSize="@dimen/txt_normal_size"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/fixName"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ahmed@"
                        android:textSize="@dimen/txt_normal_size"
                        android:textColor="@android:color/black"/>

                    <LinearLayout
                        android:layout_marginTop="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:layout_gravity="center_vertical"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_block"/>
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txt_large_size"
                            android:text="المستخدم محظور "
                            android:textColor="@android:color/black"
                            android:textStyle="bold"/>

                    </LinearLayout>









                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>



        <LinearLayout
            android:visibility="invisible"
            android:layout_margin="@dimen/margin_small_size"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/g1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/register"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_large_size"
                android:layout_marginLeft="@dimen/margin_large_size"
                android:layout_marginRight="@dimen/margin_large_size"
                android:background="@drawable/shape_btn_bg2"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/progressLay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="visible"
            app:indicatorColor="@color/colorPrimary"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>