<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SignatureDraw">

    <RelativeLayout
        android:visibility="visible"
        android:layout_marginLeft="@dimen/margin_normal_size"
        android:layout_marginRight="@dimen/margin_normal_size"
        android:id="@+id/lay1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_notifications"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_centerVertical="true"
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="حفظ"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_large_size"
            android:background="@drawable/shape_btn_bg"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:text="التوقيع"/>


    </RelativeLayout>

    <RelativeLayout
        android:visibility="visible"
        android:layout_marginLeft="@dimen/margin_normal_size"
        android:layout_marginRight="@dimen/margin_normal_size"
        android:id="@+id/lay2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <androidx.appcompat.widget.AppCompatButton
            android:background="@android:color/transparent"
            android:id="@+id/btnDel"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:text="مسح"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginRight="@dimen/margin_small_size"
                android:layout_marginLeft="@dimen/margin_small_size"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_notifications"/>
            <ImageView
                android:layout_marginRight="@dimen/margin_small_size"
                android:layout_marginLeft="@dimen/margin_small_size"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_notifications"/>
            <ImageView
                android:layout_marginRight="@dimen/margin_small_size"
                android:layout_marginLeft="@dimen/margin_small_size"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_notifications"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/signatureLay"
        android:orientation="vertical"
        android:background="@drawable/shape_ads_item_bg"
        android:layout_margin="@dimen/margin_normal_size"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/lay1"
        app:layout_constraintBottom_toTopOf="@+id/lay2">

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>