<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_normal_size"
    android:background="@drawable/shape_notification_item_bg"
    android:minHeight="120dp"
    android:padding="@dimen/margin_small_size"
    android:id="@+id/container">


    <LinearLayout
        android:layout_marginLeft="@dimen/margin_normal_size"
        android:layout_marginRight="@dimen/margin_normal_size"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lay2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_normal_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_normal_size"
            android:textColor="@android:color/white"
            android:text="تهنئة"/>
        <TextView
            android:id="@+id/body"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/margin_normal_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_normal_size"
            android:textColor="@android:color/white"
            android:text="نهنئكم بحلول عيد الفطر السعيد وكل عام وانت بخير وعساكم منلول عيد الفطر الكل عام وانت بخير وعساكم منلول عيد الفطر الكل عام وانت بخير وعساكم منلول عيد الفطر السعيد وكل عام وانت بخير وعساكم من"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lay2"
        android:layout_marginRight="@dimen/margin_normal_size"
        android:layout_marginLeft="@dimen/margin_normal_size"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/txt_small_size"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="3/2/2021"/>
        <TextView
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/txt_small_size"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="اقرأ المزيد.."/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>