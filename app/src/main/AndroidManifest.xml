<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.badrjobs">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name=".Activity.ImageViewer"></activity>
        <activity android:name=".Activity.SignatureImage" />
        <activity android:name=".Activity.MyAds" />
        <activity android:name=".Activity.ConfirmPhoneReset" />
        <activity android:name=".Activity.ResetPhone" />
        <activity android:name=".Activity.NickNameEdit" />
        <activity android:name=".Activity.SignatureForm1" />
        <activity
            android:name=".Activity.SignatureDraw"
            android:screenOrientation="landscape" />
        <activity android:name=".Activity.SignatureForm2" />
        <activity android:name=".Activity.JobsContracts" />
        <activity android:name=".Activity.ProfileEdit" />
        <activity android:name=".Activity.PaymentPackage" />
        <activity android:name=".Activity.JobDetails" />
        <activity android:name=".Activity.ChattingActivity" />
        <activity android:name=".Activity.TestingAc" />
        <activity android:name=".Activity.AddJob" />
        <activity android:name=".Activity.BlockedUsersActivity" />
        <activity android:name=".Activity.FavoriteActivity" />
        <activity android:name=".Activity.UserViewedProfile" />
        <activity android:name=".Activity.BlockedUser" />
        <activity android:name=".Activity.DeleteAccount" />
        <activity android:name=".Activity.ConfirmDeal" />
        <activity android:name=".Activity.AboutActivity" />
        <activity android:name=".Activity.ContactUs" />
        <activity android:name=".Activity.NotificationDetails" />
        <activity android:name=".Activity.NotificationActivity">
            <intent-filter>
                <action android:name="NotificationActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.ConfirmPhone" />
        <activity android:name=".Activity.MenuActivity" />
        <activity android:name=".Activity.JobsActivity" />
        <activity android:name=".Activity.SubDeptActivity" />
        <activity android:name=".Activity.DeptsActivity" />
        <activity
            android:name=".Activity.Splash"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.ResetPassword2" />
        <activity android:name=".Activity.ResetPassword1" />
        <activity android:name=".Activity.Register" />
        <activity android:name=".Activity.Login" />
        <activity
            android:name=".Activity.MainActivity"
            android:windowSoftInputMode="adjustPan" />

        <service
            android:name=".Utils.FireBaseService"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <provider
            android:name=".Utils.GenericFileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>





    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

</manifest>